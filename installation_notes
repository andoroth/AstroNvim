Install neovim 0.10.x
    sudo add-apt-repository ppa:neovim-ppa/unstable
    sudo apt-get update
    sudo apt-get install neovim

#Install npm
#    sudo apt-get install npm

Install cargo
    sudo apt-get install cargo

Install Treesitter cli
    cargo install tree-sitter-cli

Install ripgrep
    cargo install ripgrep

Add link to fonts dir
    ln -s `readlink -f fonts` ~/.local/share/fonts

Add link to nvim
    ln -s `readlink -f .` ~/.config/nvim

Set terminal font

.inputrc:
    set completion-ignore-case On
    set bell-style none
    set bell-style visible
 
.bash_aliases:
    alias vim='nvim'

